extends ./layouts/common
block content
	.container.mt-5
		if errors
			each error in errors
				.alert.alert-danger= error
		form#formAddData(method="POST")
			.form-group
				div
					label(for="file") Import file
				input#file(type="file" name="file")
			button.btn.btn-primary Submit

		form#formGetData
			.form-group
				select#hp.form-control(name="hp")
					each hp in hps
						option(value=hp)= hp
				.form-group.mt-4
					label(for="mssv") Mã số sinh viên
					input#mssv.form-control(type="text" name="mssv" placeholder="Ma so sv")
				//- .form-group.mt-4
				//- 	label(for="phone") Mã số sinh viên
				//- 	input#phone.form-control(type="text" name="mssv" placeholder="Ma so sv")
			button.btn.btn-primary Submit